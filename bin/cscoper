#!/bin/bash

CUS_PATH=./

if [ $1 ]; then
	CUS_PATH=$1;
fi
#echo "----($CUS_PATH)";

find $CUS_PATH \
	! \( -type d -path './*/\.git*' -prune \) \
	! \( -type d -path './*/\autom4te.cache*' -prune \) \
	! -wholename "*.o" \
	! -wholename "*.ko" \
	! -wholename "*.so" \
	! -wholename "*.ttf" \
	! -wholename "*.bak" \
	! -wholename "*gitignore" \
	! -wholename "*gitmodules" \
	! -wholename "*.a" \
	! -wholename "*.dll" \
	! -wholename "*.png" \
	! -wholename "*.jpg" \
	! -wholename "*.swp" \
	! -wholename "*.files" \
	! -wholename "*.out" \
	! -wholename "*.pdf" \
	! -wholename "*.exe" \
	! -wholename "*.bat" \
	! -wholename "*.xml" \
	! -wholename "*.zip" \
	! -wholename "*.tar" \
	! -wholename "*.gz" \
	! -wholename "*.sh" \
	! -wholename "*configure" \
	! -wholename "*configure.ac" \
	-type f \
	> cscope.files
