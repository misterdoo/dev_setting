#!/bin/bash

CUS_PATH=./

if [ $1 ]; then
	CUS_PATH=$1;
fi
#echo "----($CUS_PATH)";

MIDDLE_NAME=""

if [ $2 ]; then
	MIDDLE_NAME="."$2;
fi
#echo "----($MIDDLE_NAME)";

find $CUS_PATH \
	! \( -type d -path '${CUS_PATH}/*/\.git*' -prune \) \
	! \( -type d -path '${CUS_PATH}\.git*' -prune \) \
	! \( -type d -path './*/\autom4te.cache*' -prune \) \
	! -wholename "*.o" \
	! -wholename "*.ko" \
	! -wholename "*.so" \
	! -wholename "*.ttf" \
	! -wholename "*.bak" \
	! -wholename "*gitignore" \
	! -wholename "*gitmodules" \
	! -wholename "*dirstamp" \
	! -wholename "*.a" \
	! -wholename "*.dll" \
	! -wholename "*.png" \
	! -wholename "*.jpg" \
	! -wholename "*.swp" \
	! -wholename "*.files" \
	! -wholename "*.out" \
	! -wholename "*.pdf" \
	! -wholename "*.exe" \
	! -wholename "*.bat" \
	! -wholename "*.xml" \
	! -wholename "*.zip" \
	! -wholename "*.tar" \
	! -wholename "*.gz" \
	! -wholename "*.sh" \
	! -wholename "*.rom" \
	! -wholename "*.img" \
	! -wholename "*.bin" \
	! -wholename "*configure" \
	! -wholename "*configure.ac" \
	-type f \
	> cscope$MIDDLE_NAME.files
